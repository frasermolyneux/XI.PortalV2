@model XI.Portal.Data.Legacy.Models.RconMonitors

@{
    ViewData["Title"] = "Create Rcon Monitor";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <row class="row">
        <div class="col-12">

            <div class="container-fluid">
                <div class="ibox">
                    <div class="ibox-title">
                        @ViewData["Title"]
                    </div>
                    <div class="ibox-content">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="GameServerServerId" class="control-label"></label>
                                <select asp-for="GameServerServerId" class="form-control" asp-items="ViewBag.GameServerServerId"></select>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="MonitorMapRotation"/> @Html.DisplayNameFor(model => model.MonitorMapRotation)
                                </label>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="MonitorPlayers"/> @Html.DisplayNameFor(model => model.MonitorPlayers)
                                </label>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="MonitorPlayerIps"/> @Html.DisplayNameFor(model => model.MonitorPlayerIps)
                                </label>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary"/>
                            </div>
                        </form>
                    </div>
                    <div class="ibox-footer">
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>

        </div>
    </row>

</div>

@* ReSharper disable once Razor.SectionNotResolved *@

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}