@using XI.Portal.Web.Extensions
@model XI.Portal.Data.Legacy.Models.BanFileMonitors

@{
    ViewData["Title"] = "Delete Ban File Monitor";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <row class="row">
        <div class="col-12">

            <div class="container-fluid">
                <div class="ibox">
                    <div class="ibox-title">
                        @ViewData["Title"]
                    </div>
                    <div class="ibox-content">
                        <h3>Are you sure you want to delete this?</h3>
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.GameServerServer)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.ServerName(Model.GameServerServer.Title, Model.GameServerServer.LiveTitle)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.FilePath)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.MonitorFtpPath(Model.GameServerServer.FtpHostname, Model.FilePath)
                            </dd>
                        </dl>
                    </div>
                    <div class="ibox-footer">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="BanFileMonitorId"/>
                            <input type="submit" value="Delete" class="btn btn-danger"/> |
                            <a asp-action="Index">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </row>

</div>

@* ReSharper disable once Razor.SectionNotResolved *@

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}