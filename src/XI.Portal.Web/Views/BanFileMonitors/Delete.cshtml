@using XI.Portal.Web.Extensions
@model XI.Portal.Data.Legacy.Models.BanFileMonitors

@{
    ViewData["Title"] = "Delete Ban File Monitor";
}

<row class="row">
    <div class="container-fluid">
        <div class="card card-header">
            @ViewData["Title"]
        </div>
        <div class="card card-body">
            <h3>Are you sure you want to delete this?</h3>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.GameServerServer)
                </dt>
                <dd class="col-sm-10">
                    @Html.ServerName(Model.GameServerServer.Title, Model.GameServerServer.LiveTitle)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FilePath)
                </dt>
                <dd class="col-sm-10">
                    @Html.MonitorFtpPath(Model.GameServerServer.FtpHostname, Model.FilePath)
                </dd>
            </dl>
        </div>
        <div class="card card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="BanFileMonitorId"/>
                <input type="submit" value="Delete" class="btn btn-danger"/> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</row>