@using XI.Portal.Auth.Contract.Constants
@using XI.Portal.Web.Extensions
@model List<XI.Portal.Servers.Models.BanFileMonitorStatusViewModel>

@{
    ViewData["Title"] = "Ban File Status";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <row class="row">
        <div class="col-12">

            <div class="container-fluid">
                <div class="ibox">
                    <div class="ibox-title">
                        @ViewData["Title"]
                    </div>
                    <div class="ibox-content">
                        A ban file will be considered out of sync if:
                        <ul>
                            <li>The last game ban placed in the portal was done after the last modified date on the remote file</li>
                            <li>The file size (updated each run) does not match the current file on the server</li>
                            <li>(Warning) The last sync has been more than 30 minutes ago</li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </row>

    @foreach (var item in Model)
    {
        <row class="row">
            <div class="col-12">

                <div class="container-fluid">
                    <div class="ibox">
                        <div class="ibox-title">
                            <span>
                                @Html.GameTypeIcon(item.GameServer.GameType) @Html.ServerName(item.GameServer.Title, item.GameServer.LiveTitle)
                            </span>
                        </div>
                        <div class="ibox-content">
                            <p>
                                <text><strong>File Path: </strong>ftp://@item.GameServer.FtpHostname@item.BanFileMonitor.FilePath</text><br/>
                                <text>
                                    <strong>Last Recorded Sync: </strong>@item.BanFileMonitor.LastSync
                                </text><br/>
                                <text>
                                    <strong>Remote Modified: </strong>@item.LastModified
                                </text><br/>
                                <text>
                                    <strong>Last Recorded Size: </strong>@item.BanFileMonitor.RemoteFileSize
                                </text><br/>
                                <text>
                                    <strong>Remote Size: </strong>@item.FileSize
                                </text><br/>

                                @if (!string.IsNullOrWhiteSpace(item.ErrorMessage))
                                {
                                    <div class="alert alert-danger">@item.ErrorMessage</div>
                                }

                                @if (!string.IsNullOrWhiteSpace(item.WarningMessage))
                                {
                                    <div class="alert alert-warning">@item.WarningMessage</div>
                                }

                                @if (string.IsNullOrWhiteSpace(item.ErrorMessage) && string.IsNullOrWhiteSpace(item.WarningMessage))
                                {
                                    <div class="alert alert-success">@item.SuccessMessage</div>
                                }

                                @{
                                    var canEditConfig = User.Claims.Any(claim => claim.Type == XtremeIdiotsClaimTypes.SeniorAdmin ||
                                                                                 claim.Type == XtremeIdiotsClaimTypes.HeadAdmin && claim.Value == item.GameServer.GameType.ToString());
                                }

                                @if (canEditConfig)
                                {
                                    <a asp-controller="GameServers" asp-action="Edit" asp-route-id="@item.GameServer.ServerId">
                                        <i class="fa fa-edit"></i> Edit Game Server
                                    </a>
                                    <a asp-controller="BanFileMonitors" asp-action="Edit" asp-route-id="@item.BanFileMonitor.BanFileMonitorId">
                                        <i class="fa fa-edit"></i> Edit Ban File Monitor
                                    </a>
                                }
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </row>
    }

</div>