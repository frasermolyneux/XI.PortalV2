@model XI.Portal.Bus.Models.MapVote

@{
    ViewData["Title"] = "Create Map Vote";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <row class="row">
        <div class="col-12">

            <div class="container-fluid">
                <div class="ibox">
                    <div class="ibox-title">
                        @ViewData["Title"]
                    </div>
                    <div class="ibox-content">
                        <form asp-action="MapVote">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="GameType" class="control-label"></label>
                                <select asp-for="GameType" class="form-control" asp-items="ViewBag.GameType"></select>
                                <span asp-validation-for="GameType" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="MapName" class="control-label"></label>
                                <input asp-for="MapName" class="form-control"/>
                                <span asp-validation-for="MapName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Guid" class="control-label"></label>
                                <input asp-for="Guid" class="form-control"/>
                                <span asp-validation-for="Guid" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Like" class="control-label"></label>
                                <input asp-for="Like" class="form-control"/>
                                <span asp-validation-for="Like" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-bolt"> Create</i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </row>

</div>

@* ReSharper disable once Razor.SectionNotResolved *@

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}