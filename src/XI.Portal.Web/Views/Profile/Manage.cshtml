@using XI.Portal.Web.Extensions
@{
    ViewData["Title"] = "Manage Profile";
}

<row class="row">
    <div class="container text-center">
        <h1 class="display-4">Profile</h1>
    </div>
</row>

<row class="row">
    <div class="container">
        <table class="table">
            <thead>
            <tr>
                <td>Key</td>
                <td>Value</td>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>Username</td>
                <td>@User.Username()</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>@User.Email()</td>
            </tr>
            <tr>
                <td>XtremeIdiots Profile</td>
                <td>
                    <a href="https://www.xtremeidiots.com/profile/@(User.XtremeIdiotsId())-@(User.Username())/" target="_blank">XtremeIdiots Profile</a>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</row>

<row class="row" style="border-top: 20px">
    <div class="container">
        <p>
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#claimsDebug" aria-expanded="false" aria-controls="claimsDebug">
                Debug - Claims
            </button>
        </p>
        <div class="collapse" id="claimsDebug">
            <div class="card card-body">
                <table class="table">
                    <thead>
                    <tr>
                        <td>Type</td>
                        <td>Value</td>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var claim in User.Claims)
                    {
                        <tr>
                            <td>@claim.Type</td>
                            <td>@claim.Value</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</row>